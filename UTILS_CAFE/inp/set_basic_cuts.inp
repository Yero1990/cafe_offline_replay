# electron arm momentum acceptance, Delta [%] 
edelta_cut_flag = 1
c_edelta_min = 0.
c_edelta_max = 22.

# electron out-of-plane angular range, xptar [rad]
exptar_cut_flag = 0
c_exptar_min = -0.04
