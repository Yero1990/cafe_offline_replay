# electron in-plane angular range, yptar [rad]
eyptar_cut_flag = 0
c_eyptar_min = -0.024
c_eyptar_max = 0.024

# SHMS colliamtor cut (can be used as alternative to xptar,yptar cuts)
shmsCollCut_flag = 1

# Z-Reaction Vertex Difference, [cm]
ztarDiff_cut_flag = 0
c_ztarDiff_min = -2.
c_ztarDiff_max = 2.


